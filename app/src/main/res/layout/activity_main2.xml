<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_dark"
        tools:context=".Main_Screen">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:id="@+id/devices"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:paddingTop="50dip"
                android:paddingBottom="50dip"
                android:text="Devices"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/disconnectBT"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:enabled="false"
                android:text="Disconnect"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:id="@+id/colorWheel"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:paddingTop="50dip"
                android:paddingBottom="50dip"
                android:text="Color Wheel"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/lights1"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:enabled="false"
                android:text="Lights1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/lights2"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:enabled="false"
                android:text="Lights2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/lights3"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:enabled="false"
                android:text="Lights3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/lights4"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:enabled="false"
                android:text="Lights4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/brightnessUp"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="Brightness Up"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/devices"
                android:id="@+id/brightnessDown"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="Brightness Down"/>

            <SeekBar
                android:id="@+id/brightnessSeekBar"
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft ="true"
                android:layout_marginTop="50dp">
            </SeekBar>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp2"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp1"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp3"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp4"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp5"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/whiteTemp6"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="White Temp 6"/>

        </LinearLayout>


</LinearLayout>